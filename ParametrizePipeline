pipeline {
    agent any 
    parameters {
    booleanParam(name: 'executeBuild', defaultValue: 'true')   #Set booleanparameter 
    string(name: 'Version', defaultValue: '1.0')
    }
    stages {
        stage('Build') { 
           when {
             expression {
               params.executeBuild == true            #Will execute the step only when parameter is true
             }
           }
            steps {
                sh "echo 'Start Building ${params.Version}'" 
            }
        }
    }
}
